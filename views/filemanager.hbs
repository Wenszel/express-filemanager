<aside>
    <h1>Filemanager</h1>
    <a class="fmgr-btn" href="/deleteFilesData">Delete files data from table</a>
    <a href="https://icons8.com">Icons from icons8.com</a>
</aside>
<main>
        <table>
            <tr>
                <th>id</th>
                <th>icon</th>
                <th>name</th>
                <th>size</th>
                <th>type</th>
                <th>-</th>
                <th>-</th>
                <th>-</th>
            </tr>
            {{#each files}}
            <tr>
                <td>{{id}}</td>
                <td><img src="{{icon}}" height="50px" width="50px"></td>
                <td>{{name}}</td>
                <td>{{size}}</td>
                <td>{{type}}</td>
                <td><a class="fmgr-btn" href="/deleteFileData?id={{id}}">delete</a></td>
                <td><a class="fmgr-btn" href="/info?id={{id}}">info</a></td>
                <td><a class="fmgr-btn" href="/downloadFile?id={{id}}">download</a></td>
            </tr>
            {{/each}}
        </table>
    
</main>